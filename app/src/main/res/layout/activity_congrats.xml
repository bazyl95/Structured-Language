<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#5EC548">

    <TextView
        android:id="@+id/congratstextView"
        style="@style/TextViewStyleWithShadow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:background="#EBEFA4"
        android:text="@string/congratsText"
        android:textColor="#181616"
        android:textSize="44sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.26999998" />

    <Button
        android:id="@+id/congratsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#E99CE8ED"
        android:text="@string/congratsButtonText"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/congratstextView"
        app:layout_constraintStart_toStartOf="@+id/congratstextView"
        app:layout_constraintTop_toBottomOf="@+id/congratstextView" />
</androidx.constraintlayout.widget.ConstraintLayout>