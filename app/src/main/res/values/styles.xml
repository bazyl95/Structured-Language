<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="TextViewStyleWithShadow" parent="@android:style/Widget.TextView">
        <item name="android:textColor">#181616</item>
        <item name="android:textSize">44sp</item>
        <item name="android:shadowDx">15</item>
        <item name="android:shadowDy">15</item>
        <item name="android:shadowRadius">15</item>
        <item name="android:shadowColor">#A9A9A9</item>
        <item name="android:background">#EBEFA4</item>
    </style>
    <style name="targetStyle">
        <item name="android:padding">5dp</item>
        <item name="android:text">@string/target_text</item>
        <item name="android:background">@drawable/rounded_target_area</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">24sp</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:layout_marginBottom">12dp</item>
    </style>
    <style name="wordStyle">
        <item name="android:padding">7dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">24sp</item>
        <item name="android:text">@string/word_text</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>
</resources>
